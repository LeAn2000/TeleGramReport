@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form class="form-inline">
                <div class="input-group mb-2 mr-sm-2"><input id="kd-location-chooser" /></div>
                <div class="input-group mb-2 mr-sm-2"><input id="kd-group-chooser" /></div>
                <div class="input-group mb-2 mr-sm-2"><input id="kd-date-chooser" type="date" class="form-control rounded1" placeholder="dd/mm/yyyy"></div>
                <button id="kd-report-click" type="button" class="mb-2 btn btn-primary btn-icon-text">
                    <i class="mdi mdi-file-check btn-icon-prepend"></i> Xem báo cáo
                </button>
            </form>

            <div id="tabstrip" kendo-tab-strip="tabstrip">
                <ul>
                    <li class="k-active">Tổng hợp</li>
                    <li>Chi tiết theo nhóm</li>
                    <li>Chi tiết log</li>
                </ul>
                <div>
                    <div id="grid"></div>
                </div>
                <div>
                    <div id="detail"></div>
                </div>
                <div>
                    <div id="log"></div>
                </div>




            </div>
        </div>
    </div>
</div>